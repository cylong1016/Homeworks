<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="user" namespace="/user" extends="struts-default">
		<action name="login" class="edu.nju.tss.action.LoginAction">
			<result name="success" type="redirectAction">admin</result>
			<result name="error">/user/login.jsp</result>
		</action>
		<action name="admin" class="edu.nju.tss.action.AdminAction">
			<result name="success">/user/admin.jsp</result>
		</action>
		<action name="userlist" class="edu.nju.tss.action.UserListAction">
			<result name="success">/user/userlist.jsp</result>
		</action>
		<action name="register" class="edu.nju.tss.action.RegisterAction" method="register">
			<result name="success">/user/userlist.jsp</result>
			<result name="input">/user/register.jsp</result>
		</action>
	</package>
</struts>
